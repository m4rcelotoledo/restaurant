<div class="form-group">
  <%= form_tag(search_restaurantes_path, method: 'get', class: 'form-group col-md-4') do %>
    <%= text_field_tag(:q, params[:q], { class: 'form-control form-group', type: 'search', placeholder: 'Nome do Restaurante' }) %>
    <div>
      <%= submit_tag('Pesquisar', class: 'btn btn-primary') %>
      <%= link_to 'Cadastrar novo Restaurante', new_restaurante_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
